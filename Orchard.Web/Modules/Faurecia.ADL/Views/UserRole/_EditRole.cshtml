@model RoleEditViewModel
@using Orchard.Roles.ViewModels;

<div class="form-group">
    @Html.LabelFor(m => m.Name, T("Jan").Text, new { @class = "col-sm-2 col-xs-2 col-lg-2 control-label", @style = "text-align:left" })
    <div class="col-sm-4 col-xs-4 col-lg-4">
       @if (Model.Name == "Administrator")
       { // the one special case
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control",@readonly="readonly"  })
       }
       else
       {
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name)
       }
    </div>
    <input type="hidden" value="@Model.Id" name="Id" />
</div>