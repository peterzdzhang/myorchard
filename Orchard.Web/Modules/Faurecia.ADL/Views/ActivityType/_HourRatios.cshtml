@model ActivityTypeCreateViewModel
@using Faurecia.ADL.ViewModels;
@{
    var index = 0;
}
<table class="table table-bordered table-condensed" style="margin-top:0px;margin-bottom:0px;width:300px">
    <thead>
        <tr class="active">
            <th><input type="checkbox" class="check-all" /></th>
            <th>@T("Year")</th>
            <th>@T("Hour rate")</th>
            @*<th>@T("Feb")</th>
            <th>@T("Mar")</th>
            <th>@T("Apr")</th>
            <th>@T("May")</th>
            <th>@T("Jun")</th>
            <th>@T("Jul")</th>
            <th>@T("Aug")</th>
            <th>@T("Sep")</th>
            <th>@T("Oct")</th>
            <th>@T("Nov")</th>
            <th>@T("Dev")</th>*@
        </tr>
    </thead>
    @foreach (var entry in Model.HourRatios)
    {
        <tr>
            <td>
                <input type="hidden" value="@Model.HourRatios[index].HourRatio.Id" name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Id)" />
                <input type="checkbox" value="true" name="@Html.NameOf(m => m.HourRatios[index].IsChecked)" />
            </td>
            <td>
                @entry.HourRatio.Year.ToString()
                <input type="hidden" value="@Model.HourRatios[index].HourRatio.Year" name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Year)" />
            </td>
            <td style="padding:0px">
                <input type="text" value="@Model.HourRatios[index].HourRatio.Jan" name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Jan)" id="@Html.IdFor(m=>m.HourRatios[index].HourRatio.Jan)"/>
            </td>
            @*<td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Feb"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Feb)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Mar"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Mar)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Apr"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Apr)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.May"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.May)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Jun"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Jun)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Jul"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Jul)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Aug"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Aug)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Sep"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Sep)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Oct"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Oct)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Nov"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Nov)" />
            </td>
            <td style="padding:0px">
                <input type="text" 
                       value="@Model.HourRatios[index].HourRatio.Dev"
                       name="@Html.NameOf(m => m.HourRatios[index].HourRatio.Dev)" />
            </td>*@
        </tr>
        index++;
    }
</table>

